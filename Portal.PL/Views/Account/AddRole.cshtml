@model Portal.Application.Dtos.RoleVM

@{
    ViewData["Title"] = SharedLocalizer["AddRole"];
}

@if(ViewBag.Message != null)
            {
                <div>
                    <p class="alert alert-success">
                        @ViewBag.Message
                    </p>
                </div>
            }
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit"  value="@SharedLocalizer["Add"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">@SharedLocalizer["BacktoList"]</a>
</div>

